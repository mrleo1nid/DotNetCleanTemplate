{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${POSTGRES_HOST};Database=${POSTGRES_DATABASE};Username=${POSTGRES_USERNAME};Password=${POSTGRES_PASSWORD}"
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING:-localhost:6379,abortConnect=false}",
    "Host": "${REDIS_HOST:-localhost}",
    "Port": "${REDIS_PORT:-6379}",
    "Database": 0,
    "ConnectTimeout": 5000,
    "ConnectRetry": 3,
    "AbortConnect": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://localhost"
    ]
  },
  "JwtSettings": {
    "Key": "${JWT_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },
  "Database": {
    "ApplyMigrationsOnStartup": true
  },
  "RateLimiting": {
    "QueueLimit": 10,
    "UseIpPartition": true,
    "UseApiKeyPartition": true,
    "ApiKeyHeaderName": "X-API-Key",
    "IpPermitLimit": 120,
    "IpWindowSeconds": 1,
    "ApiKeyPermitLimit": 120,
    "ApiKeyWindowSeconds": 1
  },
  "Performance": {
    "LongRunningThresholdMs": 500
  },
  "FailToBan": {
    "EnableFailToBan": true,
    "MaxFailedAttempts": 5,
    "LockoutDurationMinutes": 15,
    "ResetFailedAttemptsAfterMinutes": 30
  },
  "TokenCleanup": {
    "EnableCleanup": true,
    "CleanupIntervalHours": 1,
    "RetryDelayMinutes": 5
  },
  "UserLockoutCleanup": {
    "Enabled": true,
    "CleanupIntervalMinutes": 60,
    "BatchSize": 100
  }
}
